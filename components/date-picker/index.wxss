.date-picker {
    background: #FFFFFF;
    border-radius: 24rpx;
    padding: 20rpx 16rpx 16rpx;
    box-shadow: 0 8rpx 24rpx rgba(17, 24, 39, 0.06);
    border: 1rpx solid rgba(17, 24, 39, 0.06);
    margin-bottom: 24rpx;
}

.dp-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 12rpx;
}

.dp-title {
    font-size: 32rpx;
    font-weight: 700;
    color: #111827;
    letter-spacing: 0.5rpx;
}

.dp-nav {
    min-width: 72rpx;
    height: 56rpx;
    border-radius: 999rpx;
    background: rgba(118, 118, 128, 0.12);
    display: flex;
    align-items: center;
    justify-content: center;
}

.dp-chevron {
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #111827;
    border-right: 4rpx solid #111827;
}

.dp-chevron--left {
    transform: rotate(-135deg);
}

.dp-chevron--right {
    transform: rotate(45deg);
}

.dp-weekdays {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    margin: 8rpx 4rpx 10rpx;
}

.dp-week {
    text-align: center;
    color: #6B7280;
    font-size: 22rpx;
}

.dp-grid {
    display: grid;
    grid-auto-rows: minmax(88rpx, auto);
    row-gap: 8rpx;
}

.dp-row {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    column-gap: 8rpx;
    padding: 0 4rpx;
}

.dp-cell {
    position: relative;
    height: 88rpx;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #111827;
    background: transparent;
}

.dp-cell-inner {
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.dp-cell--placeholder {
    opacity: 0;
}

.dp-cell--today .dp-cell-inner {
    border: 2rpx solid #0A7AFF;
}

.dp-cell--selected .dp-cell-inner {
    background: #0A7AFF;
    color: #FFFFFF;
}

.dp-day {
    font-size: 26rpx;
    font-weight: 600;
}

.dp-today-dot {
    position: absolute;
    bottom: 6rpx;
    width: 8rpx;
    height: 8rpx;
    border-radius: 50%;
    background: #0A7AFF;
}

.dp-med-dot {
    position: absolute;
    bottom: 6rpx;
    width: 8rpx;
    height: 8rpx;
    border-radius: 50%;
    box-shadow: 0 0 0 2rpx #FFFFFF;
}

.dp-med-dot.success {
    background: #10B981;
}

.dp-med-dot.fail {
    background: #EF4444;
}