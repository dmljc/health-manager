<view class="date-picker">
    <view class="dp-header">
        <view class="dp-nav dp-nav--prev" hover-class="tap-active" bindtap="onPrevMonth">
            <view class="dp-chevron dp-chevron--left"></view>
        </view>
        <text class="dp-title">{{calendar.year}}年{{calendar.month}}月</text>
        <view class="dp-nav dp-nav--next" hover-class="tap-active" bindtap="onNextMonth">
            <view class="dp-chevron dp-chevron--right"></view>
        </view>
    </view>
    <view class="dp-weekdays">
        <text class="dp-week" wx:for="{{['日','一','二','三','四','五','六']}}" wx:key="*this">
            {{item}}
        </text>
    </view>
    <view class="dp-grid">
        <view class="dp-row" wx:for="{{calendar.grid}}" wx:for-item="row" wx:key="index">
            <view class="dp-cell {{cell.inMonth ? '' : 'dp-cell--placeholder'}} {{cell.isToday ? 'dp-cell--today' : ''}} {{cell.isSelected ? 'dp-cell--selected' : ''}}" wx:for="{{row}}" wx:for-item="cell" wx:key="date" data-date="{{cell.date}}" bindtap="onSelectDate">
                <view wx:if="{{cell.inMonth}}" class="dp-cell-inner">
                    <text class="dp-day">{{cell.day}}</text>
                    <view wx:if="{{cell.medDot}}" class="dp-med-dot {{cell.medDot}}"></view>
                    <view wx:if="{{cell.isToday && !cell.medDot}}" class="dp-today-dot"></view>
                </view>
            </view>
        </view>
    </view>
</view>