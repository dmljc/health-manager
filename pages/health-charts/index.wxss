@import "../../styles/theme.wxss";

.health-charts-page {
  background: var(--bg-color);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: #fff;
  border-bottom: 1rpx solid var(--border-color);
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: var(--primary-color);
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
}

.action-icon {
  font-size: 20rpx;
}

.action-text {
  font-size: 24rpx;
}

/* 标签页 */
.tabs-container {
  background: #fff;
  border-bottom: 1rpx solid var(--border-color);
}

.tabs-scroll {
  white-space: nowrap;
}

.tabs {
  display: flex;
  padding: 0 32rpx;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 32rpx;
  margin-right: 16rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.tab-item.active {
  background: var(--primary-light);
  color: var(--primary-color);
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tab-name {
  font-size: 24rpx;
  font-weight: 500;
}

/* 时间范围选择 */
.time-range-container {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fff;
  margin-top: 16rpx;
  border-radius: 16rpx;
  margin: 16rpx 32rpx 0;
}

.range-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-right: 24rpx;
}

.range-options {
  display: flex;
  gap: 16rpx;
}

.range-option {
  padding: 12rpx 24rpx;
  background: var(--bg-secondary);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
  transition: all 0.3s ease;
}

.range-option.active {
  background: var(--primary-color);
  color: #fff;
}

/* 图表区域 */
.chart-section {
  margin: 24rpx 32rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.chart-header {
  padding: 32rpx 32rpx 16rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.chart-container {
  padding: 16rpx;
}

/* 指标卡片 */
.indicators-section {
  margin: 24rpx 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.indicators-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200rpx, 1fr));
  gap: 16rpx;
}

.indicator-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
}

.indicator-card:active {
  transform: scale(0.98);
}

.indicator-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.indicator-name {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.indicator-trend {
  font-size: 20rpx;
}

.trend-up {
  color: #EF4444;
}

.trend-down {
  color: #10B981;
}

.trend-stable {
  color: var(--text-secondary);
}

.indicator-value {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.indicator-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  text-align: center;
}

.status-normal {
  background: #DCFCE7;
  color: #16A34A;
}

.status-high {
  background: #FEE2E2;
  color: #DC2626;
}

.status-low {
  background: #DBEAFE;
  color: #2563EB;
}

/* 健康建议 */
.suggestions-section {
  margin: 24rpx 32rpx;
}

.suggestion-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: var(--shadow-sm);
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.suggestion-item:last-child {
  margin-bottom: 0;
}

.suggestion-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.suggestion-text {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-secondary);
}