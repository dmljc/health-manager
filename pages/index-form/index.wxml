<view class="page">
  <view class="container">
    <!-- 顶部标题区域 -->
    <view class="header">
      <view class="title">新增检测记录</view>
      <!-- <view class="subtitle">记录您的健康数据</view> -->
    </view>

    <!-- 主要表单卡片 -->
    <view class="card">
      <view class="field">
        <view class="label">检查类型</view>
        <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <view class="picker-display">{{array[index]}}</view>
        </picker>
      </view>

      <view class="field">
        <view class="label">检测日期</view>
        <picker mode="date" value="{{date}}" bindchange="bindDateChange">
          <view class="picker-display">{{date}}</view>
        </picker>
      </view>
    </view>

    <!-- 提示信息卡片 -->
    <view class="info-card">
      <view class="info-icon">💡</view>
      <view class="info-content">
        <view class="info-title">温馨提示</view>
        <view class="info-text">定期记录健康数据有助于更好地了解身体状况</view>
      </view>
    </view>

    <!-- 最近记录预览 -->
    <view class="recent-card">
      <view class="recent-header">
        <view class="recent-title">最近记录</view>
        <view class="recent-count">共 3 条记录</view>
      </view>
      <view class="recent-item">
        <view class="recent-type">乙肝表面抗原</view>
        <view class="recent-date">2025-10-15</view>
      </view>
      <view class="recent-item">
        <view class="recent-type">血常规</view>
        <view class="recent-date">2025-10-10</view>
      </view>
    </view>

    <!-- 底部保存按钮 -->
    <view class="save-section">
      <button class="save-btn" bindtap="onSave" hover-class="save-btn-hover">
        <text class="save-text">保存记录</text>
      </button>
    </view>

    <!-- 底部安全区域 -->
    <view class="safe-area"></view>
  </view>
</view>