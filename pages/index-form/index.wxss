@import "../../styles/theme.wxss";

.page {
    min-height: 100vh;
    background: #F7F8FA;
}

.container {
    padding: 0rpx 32rpx;
}

.title {
    font-size: 36rpx;
    font-weight: 700;
    color: #1F2937;
    text-align: center;
    margin-bottom: 32rpx;
}

.card {
    background: #FFFFFF;
    border-radius: 24rpx;
    box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
    padding: 28rpx;
    margin-bottom: 24rpx;
}

.field {
    /* 按要求移除底部外边距，依赖内部占位控制间距 */
    margin-bottom: 0;
}

.label {
    font-size: 26rpx;
    color: #64748B;
    margin-bottom: 10rpx;
}

.picker-display,
.value {
    width: 92%;
    border: 1rpx solid #E5E7EB;
    border-radius: 16rpx;
    padding: 22rpx 24rpx;
    font-size: 28rpx;
    color: #111827;
    background: #FAFAFB;
}

.datetime-display {
    padding: 16rpx 20rpx;
    background: #e8f4fd;
    border-radius: 8rpx;
    color: #1976d2;
    font-size: 28rpx;
    font-weight: 500;
    border: 1rpx solid #bbdefb;
}

/* 优雅的保存按钮样式 */
.save-section {
    margin-top: 40rpx;
}

.save-btn {
    width: 100%;
    height: 96rpx;
    background: linear-gradient(90deg, #7C3AED 0%, #4F46E5 100%);
    border: none;
    border-radius: 999rpx;
    padding: 0;
    margin: 0;
    box-shadow: 0 12rpx 24rpx rgba(79, 70, 229, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
}

.save-btn::after {
    border: none;
}

.save-btn-hover {
    transform: translateY(1px) scale(0.98);
    filter: brightness(0.96);
}

.save-text {
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
    letter-spacing: 1rpx;
}

.value {
    background: #FFFFFF;
}

.error-space {
    margin-top: 8rpx;
    min-height: 28rpx;
    line-height: 28rpx;
    font-size: 22rpx;
    color: #DC2626;
    /* 红色错误提示 */
}

.picker-display:active {
    background: var(--divider-color);
    border-color: var(--primary-color);
    transform: scale(0.995);
}

/* 提示信息卡片 */
.info-card {
    background: linear-gradient(135deg, #EEF2FF 0%, #F0F9FF 100%);
    border-radius: 20rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    border: 1rpx solid #E0E7FF;
    display: flex;
    align-items: flex-start;
    gap: 16rpx;
}

.info-icon {
    font-size: 32rpx;
    line-height: 1;
    margin-top: 4rpx;
}

.info-content {
    flex: 1;
}

.info-title {
    font-size: 26rpx;
    font-weight: 600;
    color: #3730A3;
    margin-bottom: 6rpx;
}

.info-text {
    font-size: 24rpx;
    color: #64748B;
    line-height: 1.5;
}

/* 保存按钮区域优化 */
.save-section {
    margin-top: 16rpx;
    margin-bottom: 24rpx;
}

/* 底部安全区域 */
.safe-area {
    height: 40rpx;
}