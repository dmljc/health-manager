@import "../../styles/theme.wxss";

.me-page {
    min-height: 100vh;
    background: var(--color-bg);
    padding: 0 0 calc(80rpx + env(safe-area-inset-bottom));
}

/* 渐变 Hero 区域 */
.hero {
    background: linear-gradient(180deg, #7C3AED 0%, #4F46E5 100%);
    padding: 48rpx 32rpx 120rpx;
    color: #fff;
    text-align: center;
    border-radius: 0 0 48rpx 48rpx;
    margin-bottom: -80rpx;
    /* 让白色卡片上移，形成重叠效果 */
}

/* 头像容器 - 确保登录前后样式一致 */
.avatar-container {
    margin-bottom: 24rpx;
}

/* 卡片通用样式调整 */
.card {
    background: #fff;
    border-radius: 32rpx;
    padding: 32rpx;
    box-shadow: 0 20rpx 40rpx rgba(17, 24, 39, 0.08);
    margin: 0 32rpx 24rpx;
    position: relative;
    /* 确保在 Hero 之上 */
    z-index: 10;
}

/* 微信昵称区域 - 位置固定 */
.nickname-section {
    display: inline-flex;
    align-items: center;
    gap: 12rpx;
    color: #E0E7FF;
    font-size: 26rpx;
    min-height: 40rpx; /* 固定高度，确保位置不变 */
}

.nickname-pill {
    min-width: 120rpx; /* 最小宽度，确保占位 */
    text-align: center;
}

.wxid-text {
    opacity: 0.8;
}

.pill {
    border-radius: 999rpx;
    padding: 8rpx 16rpx;
    font-size: 24rpx;
}

.pill-gradient {
    background: rgba(255, 255, 255, 0.15);
    color: #fff;
}

/* 资料完善卡片 */
.card-title {
    font-size: 32rpx;
    font-weight: 700;
    margin-bottom: 6rpx;
}

.card-desc {
    font-size: 26rpx;
    color: #6B7280;
    margin-bottom: 24rpx;
}

.avatar-select {
    display: flex;
    align-items: center;
    gap: 24rpx;
    margin-bottom: 24rpx;
}

/* 资料完善卡片中的头像容器 */
#profile-card .avatar-container {
    margin-bottom: 0;
}

.avatar-text {
    display: flex;
    flex-direction: column;
    gap: 6rpx;
    flex: 1;
}

.avatar-large-btn {
    position: relative; /* Ensure the plus icon is positioned correctly */
    width: 160rpx;
    height: 160rpx;
    padding: 0;
    margin: 0;
    border: none;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}
/* 统一头像样式 - Hero区域和资料完善卡片 */
.avatar-hero {
    margin: 0 auto;
    box-shadow: 0 12rpx 24rpx rgba(79,70,229,.25);
    border-radius: 50%;
    overflow: hidden;
}

.avatar-large {
    width: 100%;
    height: 100%;
    border-radius: 100%;
    background: #F3F4F6;
}

.avatar-large.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 56rpx;
    color: #9CA3AF;
}

.avatar-plus {
    position: absolute;
    right: 0rpx;
    bottom: 0rpx;
    width: 48rpx;
    height: 48rpx;
    border-radius: 24rpx;
    background: linear-gradient(135deg, #7C3AED 0%, #4F46E5 100%);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 32rpx;
    box-shadow: 0 6rpx 12rpx rgba(79, 70, 229, 0.25);
}

.avatar-large-btn::after {
    border: none;
}

.field {
    margin-bottom: 32rpx;
}

.label {
    font-size: 28rpx;
    color: #374151;
    margin-bottom: 12rpx;
}

.value {
    border: 1rpx solid #E5E7EB;
    border-radius: 16rpx;
    padding: 24rpx 28rpx;
    font-size: 28rpx;
    color: #111827;
    background: #F9FAFB;
}

.input-ph {
    color: #9CA3AF;
}

.save-section {
    margin: 32rpx 32rpx 0;
}

/* 仅在资料完善卡片内让按钮与输入框等宽 */
#profile-card .save-section {
    margin-left: 0;
    margin-right: 0;
}

.save-btn {
    width: 100%;
    height: 96rpx;
    background: linear-gradient(90deg, #7C3AED 0%, #4F46E5 100%);
    border: none;
    border-radius: 999rpx;
    padding: 0;
    margin: 0;
    box-shadow: 0 12rpx 24rpx rgba(79, 70, 229, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
}

.plus-icon {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 40rpx;
    height: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: #4f46e5;
    color: #fff;
    font-size: 32rpx;
    font-weight: 700;
    border: 4rpx solid #fff;
}

.form-line {
    display: flex;
}

.save-text {
    font-size: 32rpx;
    font-weight: 600;
    letter-spacing: 1rpx;
    color: #fff;
}