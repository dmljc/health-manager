@import "../../styles/theme.wxss";

.me-page {
    min-height: 100vh;
    background: var(--color-bg);
    padding: 0 32rpx calc(80rpx + env(safe-area-inset-bottom));
}

/* 简洁 Hero（去掉渐变与动态逻辑） */
.hero {
    background: transparent;
    padding: 32rpx 0 24rpx;
    color: #111827;
    text-align: center;
    margin: 0 0 24rpx;
}

.hero-title {
    font-size: 44rpx;
    font-weight: 700;
    letter-spacing: 1rpx;
}

.hero-title-line {
    display: inline-flex;
    align-items: center;
    gap: 16rpx;
    flex-wrap: wrap;
    justify-content: center;
}

.wxid-line {
    display: inline-flex;
    align-items: center;
    gap: 12rpx;
    color: #6B7280;
    font-size: 26rpx;
}

.wxid-text {
    opacity: 0.95;
}

.pill {
    border-radius: 999rpx;
    padding: 8rpx 16rpx;
    font-size: 24rpx;
}

.pill-gradient {
    background: linear-gradient(90deg, #7C3AED 0%, #2563EB 100%);
    color: #fff;
    box-shadow: 0 6rpx 12rpx rgba(37, 99, 235, 0.20);
}

.avatar-box {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    overflow: hidden;
    margin-right: 20rpx;
}

.avatar {
    width: 100%;
    height: 100%;
}

.avatar.placeholder {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    background: #F3F4F6;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 48rpx;
}

.info {
    display: flex;
    flex-direction: column;
}

.nick {
    font-size: 32rpx;
    font-weight: 600;
    color: #111827;
}

.wxid {
    font-size: 28rpx;
    color: #6B7280;
    margin-top: 6rpx;
}

/* 未登录显示为可点击链接 */
.login-link {
    color: #2563EB;
}

.card {
    background: #fff;
    border-radius: 32rpx;
    padding: 24rpx;
    box-shadow: 0 20rpx 40rpx rgba(17, 24, 39, 0.10);
    margin-bottom: 24rpx;
    margin-top: 0;
}

.card-title {
    font-size: 32rpx;
    font-weight: 700;
    margin-bottom: 0;
    line-height: 1.2;
}

.card-desc {
    font-size: 26rpx;
    color: #6B7280;
    margin-bottom: 0;
    line-height: 1.6;
}

/* 退出登录区域仍使用通用 actions 样式 */
.actions {
    display: flex;
    gap: 16rpx;
}

/* 白卡通用：左图右文行布局 */
.card-row {
    display: flex;
    align-items: center;
    gap: 24rpx;
}

.primary {
    background: #2563EB;
    color: #fff;
    border-radius: 16rpx;
    padding: 20rpx 32rpx;
}

.secondary {
    background: #F3F4F6;
    color: #111827;
    border-radius: 16rpx;
    padding: 20rpx 32rpx;
}

/* 对齐“新增检查记录”页的字段样式 */
.field {
    margin-bottom: 24rpx;
}

.label {
    font-size: 26rpx;
    color: #64748B;
    margin-bottom: 10rpx;
}

.value {
    border: 1rpx solid #E5E7EB;
    border-radius: 999rpx;
    padding: 24rpx 28rpx;
    font-size: 28rpx;
    color: #111827;
    background: #fff;
    box-shadow: 0 10rpx 24rpx rgba(17, 24, 39, 0.06);
}

/* 大尺寸头像选择与加号徽标 */
.avatar-select {
    display: flex;
    align-items: flex-start;
    gap: 24rpx;
    margin-bottom: 24rpx;
}

/* 右侧文本列布局：标题在上、描述在下 */
.avatar-text {
    display: flex;
    flex-direction: column;
    gap: 6rpx;
    flex: 1;
}

.avatar-large-btn {
    position: relative;
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    padding: 0;
    margin: 0;
    border: none;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.avatar-large.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 56rpx;
    color: #9CA3AF;
}

.avatar-plus {
    position: absolute;
    right: -6rpx;
    bottom: -6rpx;
    width: 40rpx;
    height: 40rpx;
    border-radius: 20rpx;
    background: linear-gradient(135deg, #7C3AED 0%, #2563EB 100%);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    box-shadow: 0 6rpx 12rpx rgba(37, 99, 235, 0.18);
}

.card-title {
    font-size: 30rpx;
    font-weight: 600;
    margin-bottom: 6rpx;
}

.card-desc {
    font-size: 26rpx;
    color: #6B7280;
    margin-bottom: 18rpx;
}

.avatar-large-btn::after {
    border: none;
}

.avatar-large {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    background: #F3F4F6;
}

.avatar-large.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 56rpx;
    color: #9CA3AF;
}

.avatar-plus {
    position: absolute;
    right: -6rpx;
    bottom: -6rpx;
    width: 40rpx;
    height: 40rpx;
    border-radius: 20rpx;
    background: linear-gradient(135deg, #7C3AED 0%, #2563EB 100%);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    box-shadow: 0 6rpx 12rpx rgba(37, 99, 235, 0.18);
}

.save-section {
    margin-top: 32rpx;
}

/* 与第一张图一致的竖向渐变按钮 */
.save-btn {
    width: 100%;
    height: 88rpx;
    background: linear-gradient(90deg, #7C3AED 0%, #2563EB 100%);
    border: none;
    border-radius: 999rpx;
    padding: 0;
    margin: 0;
    box-shadow: 0 10rpx 24rpx rgba(124, 58, 237, 0.25);
}

.save-text {
    font-size: 30rpx;
    font-weight: 600;
    letter-spacing: 1rpx;
    color: #fff;
}

/* 输入框占位样式与细节优化 */
.input-ph {
    color: #9CA3AF;
}