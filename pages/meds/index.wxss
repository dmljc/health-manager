/* 服药模块样式（精简协调版） */
@import "../../styles/theme.wxss";

.meds-page {
    min-height: 100vh;
    background: var(--color-bg);
    padding: 48rpx 24rpx calc(80rpx + env(safe-area-inset-bottom));
    display: flex;
    flex-direction: column;
}

.circle-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24rpx 0;
}

.toggle-circle {
    width: 320rpx;
    height: 320rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    font-size: 36rpx;
    font-weight: 700;
    box-shadow: 0 10rpx 30rpx rgba(17, 24, 39, 0.14);
    border: 1rpx solid rgba(17, 24, 39, 0.04);
    transition: transform .16s ease, filter .16s ease, background .2s ease, box-shadow .2s ease;
}

.circle--press {
    transform: scale(0.97);
    filter: brightness(0.95);
}

.circle--red {
    background: linear-gradient(135deg, #FF6B6B 0%, #EF4444 100%);
}

.circle--green {
    background: linear-gradient(135deg, #34D399 0%, #10B981 100%);
}

.circle-text {
    letter-spacing: 1rpx;
    text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.18);
}

/* 药物余量显示 - 简洁设计 */
.medicine-remaining {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 24rpx 0;
    padding: 16rpx 0;
}

.medicine-icon {
    font-size: 36rpx;
    margin-right: 12rpx;
}

.medicine-count {
    font-size: 32rpx;
    font-weight: 400;
    letter-spacing: -0.5rpx;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    display: flex;
    align-items: baseline;
}

/* 剩余数量 - 动态颜色 */
.remaining-count {
    transition: color 0.3s ease;
}

.remaining-count.normal {
    color: #1f2937;
}

.remaining-count.warning {
    color: #f59e0b;
}

.remaining-count.danger {
    color: #ef4444;
    animation: pulse 2s infinite;
}

.number-slash {
    color: #1f2937;
    margin: 0 4rpx;
}

/* 总数量 - 固定黑色 */
.total-count {
    color: #1f2937;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
}