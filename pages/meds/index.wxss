/* 服药模块样式（精简协调版） */
@import "../../styles/theme.wxss";

.meds-page {
  min-height: 100vh;
  background: var(--color-bg);
  padding: 48rpx 24rpx calc(80rpx + env(safe-area-inset-bottom));
  display: flex;
  flex-direction: column;
}

.header { width: 100%; text-align: center; margin-bottom: 24rpx; }
.subtitle { margin-top: 8rpx; color: var(--color-text-secondary); font-size: 26rpx; }

.status { display: flex; justify-content: center; margin: 16rpx 0 24rpx; }
.status-text {
  color: #374151;
  font-size: 26rpx;
  background: #EEF2FF;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
}

.circle-wrapper { display: flex; align-items: center; justify-content: center; padding: 24rpx 0; }

.toggle-circle {
  width: 320rpx;
  height: 320rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 700;
  box-shadow: 0 10rpx 30rpx rgba(17, 24, 39, 0.14);
  border: 1rpx solid rgba(17, 24, 39, 0.04);
  transition: transform .16s ease, filter .16s ease, background .2s ease, box-shadow .2s ease;
}

.circle--press { transform: scale(0.97); filter: brightness(0.95); }
.circle--red { background: linear-gradient(135deg, #FF6B6B 0%, #EF4444 100%); }
.circle--green { background: linear-gradient(135deg, #34D399 0%, #10B981 100%); }
.circle-text { letter-spacing: 1rpx; text-shadow: 0 1rpx 4rpx rgba(0,0,0,0.18); }

.hint { margin-top: 16rpx; display: flex; justify-content: center; }
.hint-text { color: var(--color-text-secondary); font-size: 24rpx; }
