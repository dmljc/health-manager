<view class="container">
  <view class="card">
    <view class="title">今日提醒</view>
    <view class="subtitle">按时服药，保持规律</view>
    <button class="btn-primary" bindtap="goMeds">记录服药</button>
  </view>

  <view class="card" style="margin-top:24rpx;">
    <view class="title">最近复查</view>
    <view class="subtitle">{{lastCheckupText}}</view>
    <button style="margin-top:16rpx;" bindtap="goCheckups">填写复查</button>
  </view>

  <view class="card" style="margin-top:24rpx;">
    <view class="title">趋势</view>
    <view class="subtitle">查看肝功能指标变化</view>
    <button style="margin-top:16rpx;" bindtap="goStats">查看折线图</button>
  </view>
</view>

