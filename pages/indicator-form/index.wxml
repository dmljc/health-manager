<view class="page">
  <view class="container">
    <view class="header">
      <view class="title">新增检测记录</view>
    </view>

    <view class="card">
      <view class="field">
        <view class="label">检查类型</view>
        <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <view class="picker-display">{{array[index]}}</view>
        </picker>
      </view>

      <view class="field">
        <view class="label">检测日期</view>
        <picker mode="date" value="{{date}}" bindchange="bindDateChange">
          <view class="picker-display">{{date}}</view>
        </picker>
      </view>

      <view class="field">
        <view class="label">检测时间</view>
        <picker mode="time" value="{{time}}" start="00:00" end="23:59" bindchange="bindTimeChange">
          <view class="picker-display">{{time}}</view>
        </picker>
      </view>

      <view class="field">
        <view class="label">完整日期时间</view>
        <view class="datetime-display">{{date}} {{time}}</view>
      </view>

      <!-- 保存按钮 -->
      <view class="save-section">
        <button class="save-btn" bindtap="onSave" hover-class="save-btn-hover">
          <text class="save-icon">💾</text>
          <text class="save-text">保存记录</text>
        </button>
      </view>
    </view>
  </view>
</view>