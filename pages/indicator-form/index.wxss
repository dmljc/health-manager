@import "../../styles/theme.wxss";

.page {
  min-height: 100vh;
  background: #F7F8FA;
}

.container {
  padding: 40rpx 36rpx;
}

.header { margin-bottom: 26rpx; }
.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1F2937;
  text-align: center;
}

.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0,0,0,0.06);
  padding: 28rpx;
}

.field { margin-bottom: 22rpx; }
.label {
  font-size: 26rpx;
  color: #64748B;
  margin-bottom: 10rpx;
}

.picker-display,
.value {
  width: 92%;
  border: 1rpx solid #E5E7EB;
  border-radius: 16rpx;
  padding: 22rpx 24rpx;
  font-size: 28rpx;
  color: #111827;
  background: #FAFAFB;
}



.datetime-display {
  padding: 16rpx 20rpx;
  background: #e8f4fd;
  border-radius: 8rpx;
  color: #1976d2;
  font-size: 28rpx;
  font-weight: 500;
  border: 1rpx solid #bbdefb;
}

/* 优雅的保存按钮样式 */
.save-section {
  margin-top: 40rpx;
  /* padding-bottom: 40rpx; */
}

.save-btn {
  width: 100%;
  /* 从左到右的渐变：主题蓝色到白色 */
  background: linear-gradient(90deg, var(--primary-color) 0%, #FFFFFF 100%);
  border: 1rpx solid #F0F0F0;
  border-radius: var(--radius-xl);
  padding: 0;
  margin: 0;
  /* 柔和扩散阴影 */
  box-shadow:
    0 6px 16px rgba(37, 99, 235, 0.08),
    0 16px 32px rgba(37, 99, 235, 0.06),
    0 36px 72px rgba(37, 99, 235, 0.05);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx 32rpx;
}

.save-btn::after {
  border: none;
}

.save-btn-hover {
  transform: translateY(1px) scale(0.98);
  filter: brightness(0.96);
}

.save-icon {
  font-size: 32rpx;
  font-weight: 400;
  color: #1F2937;
  line-height: 1;
}

.save-text {
  color: #1F2937;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.value { background: #FFFFFF; }



.picker-display:active {
  opacity: 0.96;
}